<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content(string.Format("{0}://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js", Request.IsSecureConnection ? "https" : "http"))" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.efvt.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1></h1>
            </div>
            <div id="logindisplay">
                @(User == null ? string.Empty : User.Identity.Name)
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Settings", "Settings", "Home")</li>
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
    <script type="text/javascript">
        var domain = '@Request.Url.Host';
        var path = '@Request.ApplicationPath';
    </script>
</body>
</html>
