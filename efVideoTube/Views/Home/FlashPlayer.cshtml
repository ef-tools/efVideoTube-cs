@using efVideoTube.Models;
@model VideoModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.Title</title>
    <link href="@Url.Content("~/Content/Player.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/flowplayer-3.2.11.min.js")" type="text/javascript"></script>
</head>
<body>
    <div>
		<a id="player" href="@Model.Url" style="display:block;width:100%;height:100%"></a> 
		<script>
		    flowplayer("player", "@Url.Content("~/Content/flowplayer-3.2.15.swf")", {
		        clip: {
		            scaling: 'fit'
		        }
		    });
		</script>
    </div>
</body>
</html>

