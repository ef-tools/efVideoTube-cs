@using efVideoTube.Models;
@{
    ViewBag.Title = "Settings";
}

<h2>Settings</h2>

<fieldset>
    <legend>Video Size</legend>
    <input id="videoSizeFit" class="videoSize" name="videoSize" type="radio" value="Fit to window" />
    <input class="videoSize" name="videoSize" type="radio" value="Keep original" />
</fieldset>
@foreach (Media m in Media.SupportedMedia.Values) {
    <fieldset class="videoType">
        <legend>@m.Extension</legend>
        @if ((m.AvailablePlayers != null) && m.AvailablePlayers.Any()) {
            foreach (Player player in m.AvailablePlayers) {
            <p>
                @Html.RadioButtonWithLabel(m.Extension, player.ToString(), (player == m.Player), new { @class = "player" })
            </p>
            }
        }
        else {
        <p>
            @Html.RadioButtonWithLabel(m.Extension, m.Player.ToString(), true)
        </p>
        }
    </fieldset>
}
<script src="@Url.Content("~/Scripts/jquery.efvt.settings.js")" type="text/javascript"></script>
